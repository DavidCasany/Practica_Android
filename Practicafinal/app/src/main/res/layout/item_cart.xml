<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cart_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Producte"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_cart_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 x 15.0€ = 30.0€"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_cart_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_input_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Restar 1"/>

        <View android:layout_width="16dp" android:layout_height="1dp"/>

        <ImageButton
            android:id="@+id/btn_cart_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#D32F2F"
            android:contentDescription="Eliminar tot"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>